generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./budget.db"
}

model Expense {
  id              Int       @id @default(autoincrement())
  description     String
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  categoryId      Int
  paymentType     Int
  category        Category  @relation(fields: [categoryId], references: [id])
  duedate         DateTime?
  active          Boolean   @default(true)
  defaultValue    Decimal?
  repeatingMonths Int       @default(0)
  months          Month[]
}

model Month {
  id           Int            @id @default(autoincrement())
  month        Int
  year         Int
  comment      String         @default("")
  values       ExpenseValue[]
  incomeValues IncomeValue[]
  expenses     Expense[]
  incomes      Income[]

  @@unique([month, year])
  @@map("ExpenseMonth")
}

model ExpenseValue {
  id      Int     @id @default(autoincrement())
  comment String  @default("")
  value   Decimal
  month   Month?  @relation(fields: [monthId], references: [id])
  monthId Int?
}

model Income {
  id              Int       @id @default(autoincrement())
  defaultValue    Decimal
  description     String
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  repeatingMonths Int       @default(0)
  months          Month[]
  category        Category? @relation(fields: [categoryId], references: [id])
  categoryId      Int?
}

model IncomeValue {
  id      Int     @id @default(autoincrement())
  value   Decimal
  comment String  @default("")
  month   Month?  @relation(fields: [monthId], references: [id])
  monthId Int?
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String
  order    Int       @default(0)
  expenses Expense[]
  incomes  Income[]
}
